{
  "name": "elevate-ui",
  "version": "0.1.1",
  "description": "An opinionated toolkit of customizable, easy-to-use React components for building scalable, maintainable web applications",
  "main": "./index.js",
  "sideEffects": false,
  "scripts": {
    "build": "yarn babel src --out-dir . --ignore setupTests.js,test.js",
    "deploy": "yarn run build && yarn publish",
